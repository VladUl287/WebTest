@using WebTest.Core.Dtos
@model WebTest.Models.WeatherList;

@{
    ViewData["Title"] = "Arcives";
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Дата</th>
                <th scope="col">Время(московское)</th>
                <th scope="col">T</th>
                <th scope="col">Отн. влажность воздуха, %</th>
                <th scope="col">Td</th>
                <th scope="col">Атм. давление, мм рт.ст.</th>
                <th scope="col">Направление ветра</th>
                <th scope="col">Скоростьветра, м/с</th>
                <th scope="col">Облачность, %</th>
                <th scope="col">h</th>
                <th scope="col">VV</th>
                <th scope="col">Погодные явления</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Weather)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.Time</td>
                    <td>@item.Temperature</td>
                    <td>@item.RelativeHumidity</td>
                    <td>@item.DewPoint</td>
                    <td>@item.AtmospherePressure</td>
                    <td>@item.WindDirection</td>
                    <td>@item.WindSpeed</td>
                    <td>@item.Cloudy</td>
                    <td>@item.CloudBase</td>
                    <td>@item.HorizontalVisibility</td>
                    <td>@item.WeatherConditions</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex flex-wrap">
        @for (var i = 0; i < Model.PageCount; i++)
        {
            @Html.ActionLink((i + 1).ToString(), "Index", "Archive", new { Page = i + 1 }, new { @class = "me-2 mt-1 btn btn-primary btn-sm" })
            ;
        }
    </div>
</div>
